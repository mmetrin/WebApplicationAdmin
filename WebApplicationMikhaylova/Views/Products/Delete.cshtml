@Styles.Render("~/Content/StyleTable.css")
<div class="table-phone">
    <div class="content-create"></div>

    @model WebApplicationMikhaylova.Models.Products

    @{
        ViewBag.Title = "Delete";
    }

    <div class="title-table" style="padding-top:-20px">
            <h3>Удаление товара</h3>
            <h5>Вы уверены, что хотите удалить данный товар из списка?</h5>
        <div class="button-last">
            @Html.ActionLink("Вернуться к товарам", "Index")
        </div>
        <hr />
    </div>
    <div class="titles-delete">
        <h6>Отменить это действие будет невозможно</h6>
    </div>
    <div>
        <div class="table">
            <dl class="dl-horizontal">
                <dt>
                    Название товара
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.product_name)
                </dd>

                <dt>
                    Описание товара
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.description)
                </dd>

                <dt>
                    Цена
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.price)
                </dd>

                <dt>
                    Вес
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.weight)
                </dd>

                <dt>
                    Категория
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Parameters.parameter)
                </dd>

            </dl>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <div class="but">
                    <input type="submit" value="Удалить данный товар" class="button" />
                </div>
            </div>
        }
    </div>
</div>
