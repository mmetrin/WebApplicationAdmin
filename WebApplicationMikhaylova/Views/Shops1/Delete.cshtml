@Styles.Render("~/Content/StyleTable.css")
<div class="table-phone">
    <div class="content-create"></div>

    @model WebApplicationMikhaylova.Models.Shops

    @{
        ViewBag.Title = "Delete";
    }

    <div class="title-table" style="padding-top:-20px">
        <h3>Удаление магазина</h3>
        <h5>Вы уверены, что хотите удалить данный магазин из списка?</h5>
        <div class="button-last">
            @Html.ActionLink("Вернуться к магазинам", "Index")
        </div>
        <hr />
    </div>
    <div class="titles-delete">
        <h6>Отменить это действие будет невозможно</h6>
    </div>
    <div>
        <div class="table">
            <dl class="dl-horizontal">
                <dt>
                    Адрес магазина
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.address)
                </dd>

                <dt>
                    Время работы
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.time_of_work)
                </dd>

            </dl>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <div class="but">
                    <input type="submit" value="Удалить данный магазин" class="button" />
                </div>
            </div>
        }
    </div>
</div>
