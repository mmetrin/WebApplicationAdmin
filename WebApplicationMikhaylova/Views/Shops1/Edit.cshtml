@Styles.Render("~/Content/StyleTable.css")
<div class="table-phone">
    <div class="content-create"></div>
    @model WebApplicationMikhaylova.Models.Shops

    @{
        ViewBag.Title = "Edit";
    }
    <div class="title-table">
        <h3>Редактирование информации</h3>
        <h5>Отредактируйте данные о выбранном магазине из списка</h5>
        <div class="button-last">
            @Html.ActionLink("Вернуться к магазинам", "Index")
        </div>
        <hr />
    </div>

    <div class="table">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.id_shop)

                <div class="form-group">
                    @Html.LabelFor(model => model.address, "Адрес магазина", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.time_of_work, "Время работы", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.time_of_work, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.time_of_work, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Сохранить данные" class="button" style="font-size:23px" />
                    </div>
                </div>
            </div>
        }

    </div>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>