@Styles.Render("~/Content/StyleTable.css")
<div class="table-phone">
    <div class="content-create"></div>

    @model WebApplicationMikhaylova.Models.Orders

    @{
        ViewBag.Title = "Delete";
    }


    <div class="title-table" style="padding-top:-20px">
        <h3>Удаление заказа</h3>
        <h5>Вы уверены, что хотите удалить данный заказ из списка?</h5>
        <div class="button-last">
            @Html.ActionLink("Вернуться к заказам", "Index")
        </div>
        <hr />
    </div>
    <div class="titles-delete">
        <h6>Отменить это действие будет невозможно</h6>
    </div>
    <div>
        <div class="table">
            <dl class="dl-horizontal">
                <dt>
                    ID корзины
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Basket.id_basket)
                </dd>

                <dt>
                    Почта клиента
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Users.email)
                </dd>

                <dt>
                    Сумма к оплате
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.final_price)
                </dd>

                <dt>
                    Магазин по адресу
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Shops.address)
                </dd>
                <dt>
                    Дата доставки
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.delivery_date)
                </dd>

                <dt>
                    Статус заказа
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Status.status1)
                </dd>


            </dl>

        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <div class="but">
                    <input type="submit" value="Удалить данный заказ" class="button" />
                </div>
            </div>
        }
    </div>
</div>
